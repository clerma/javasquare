API_ENDPOINT="https://connect.squareup.com/v2/catalog/list"

# Your Square application credentials
APPLICATION_ID="sandbox-sq0idb-pt3Xs8bzGV3pzO2SFjnblw"
ACCESS_TOKEN="EAAAlzfZbtj_RsaJSX4xVueNdl8kNHD2gguAbEWxYAzHAiHmSXxzZ0Vhre_nlDJ3"

# Curl command to fetch menu data
